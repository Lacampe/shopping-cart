<div class="row">
  <div class="col-sm-6 col-md-4 offset-sm-3 offset-md-4">
    <div id="success" class="alert alert-success {{# if noMessage}}d-none{{/if}}">
      {{ successMsg }}
    </div>
  </div>
</div>

{{# each products }}
  <div class="row">
    {{# each this }}
      <div class="col-sm-6 col-md-4" style="margin-bottom: 15px;">
        <div class="card">
          <img class="card-img-top" src="{{ this.imagePath }}">
          <div class="card-body">
            <h5 class="card-title">{{ this.title }}</h5>
            <p class="card-text description">{{ this.description }}</p>
            <div class="clearfix">
              <div class="price float-left">Â£{{ this.price }}</div>
              <a href="/add-to-cart/{{ this._id }}" class="btn btn-success float-right">Add to Cart</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}



